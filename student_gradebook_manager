import json
import os

DATA_FILE = "students.json"

def load_data():
    if os.path.exists(DATA_FILE):
        with open(DATA_FILE, "r") as f:
            return json.load(f)
    return []

def save_data(data):
    with open(DATA_FILE, "w") as f:
        json.dump(data, f, indent=4)

def add_student():
    name = input("Enter student name: ")
    grades = input("Enter grades (comma-separated): ").split(",")
    try:
        grades = [float(g.strip()) for g in grades]
    except ValueError:
        print("âŒ Invalid grade format. Use numbers.")
        return
    students.append({"name": name, "grades": grades})
    save_data(students)
    print("âœ… Student added.")

def view_students():
    if not students:
        print("No records found.")
        return
    for idx, student in enumerate(students, start=1):
        avg = sum(student["grades"]) / len(student["grades"])
        print(f"{idx}. {student['name']} - Grades: {student['grades']} | Average: {avg:.2f}")

def search_student():
    name = input("Enter name to search: ").lower()
    found = False
    for student in students:
        if student["name"].lower() == name:
            avg = sum(student["grades"]) / len(student["grades"])
            print(f"ğŸ“š {student['name']} - Grades: {student['grades']} | Average: {avg:.2f}")
            found = True
    if not found:
        print("âš ï¸ Student not found.")

def menu():
    print("\n=== Student Gradebook Manager ===")
    print("1. Add Student")
    print("2. View All Students")
    print("3. Search Student by Name")
    print("4. Exit")
    return input("Choose an option: ")

students = load_data()

while True:
    choice = menu()
    if choice == "1":
        add_student()
    elif choice == "2":
        view_students()
    elif choice == "3":
        search_student()
    elif choice == "4":
        print("Goodbye!")
        break
    else:
        print("Invalid choice. Try again.")
